{
  "name": "jest-runner-cli",
  "version": "0.2.4",
  "description": "Jest custom runner for CLI workflows with a minimal CliRunner helper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./run": "./dist/run.js",
    "./CliRunner": "./dist/CliRunner.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "README_ja.md",
    "LICENSE"
  ],
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && webpack --config webpack.config.js --mode production",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.unit.config.js",
    "test:ci": "jest --config jest.unit.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run build && npm run test && npm run test:integration",
    "lint": "eslint . --ext .ts",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "docs": "typedoc --options typedoc.json"
  },
  "keywords": ["cli", "runner", "test", "jest"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nojaja/jest-runner-cli.git"
  },
  "bugs": {
    "url": "https://github.com/nojaja/jest-runner-cli/issues"
  },
  "homepage": "https://github.com/nojaja/jest-runner-cli#readme",
  "author": "nojaja <free.riccia@gmail.com> (https://github.com/nojaja)",
  "license": "MIT",
  "peerDependencies": {
    "jest": "^29.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dependency-cruiser": "^17.3.5",
    "eslint": "^8.45.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "5.3.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.0.1",
    "ts-loader": "^9.4.2"
  },
  "dependencies": {
    "create-jest-runner": "^1.0.0",
    "jest-runner": "^29.6.1"
  }
}
